<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.TratamientoDPActivity">
    <LinearLayout
        android:id="@+id/tratamientoLayoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/firmaCardView"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/tratamientoScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tratamientoLayoutSecundario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/firmaCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="4dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tratamientoLayoutFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tratamientoLayoutPrincipal">
        <com.kyanogen.signatureview.SignatureView
            android:id="@+id/firmaSignatureView"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:backgroundColor="#FFFFFF"
            app:enableSignature="true"
            app:penColor="#000000"
            app:penSize="2dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/tratamientoLayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firmaCardView">
        <Button
            android:id="@+id/buttonGuardarTratamientoDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_primary_variant"
            android:text="Aceptar TÃ©rminos y Condiciones" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>